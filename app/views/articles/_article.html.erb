<% @articles.each do |article| %>
  <div class="card text-center">
    <% if user_signed_in? %>
      <div class="card-header">
        Written by:<%=article.user.email%>
      </div>
    <% else %>
      <div class="card-header">
        You need to sign up or login to see the author
      </div>
    <% end %>
    <div class="card-body">
      <p class="card-text">
        <%= article.article %>
      </p>
      <%= link_to article, class: 'btn btn-secondary text-white' do %>
        <i class="bi bi-link-45deg"></i>
      <% end %>
      <%= link_to edit_article_path(article), class: 'btn btn-secondary text-white' do %>
        <i class="bi bi-pencil"></i>
      <% end %>
      <%= link_to article, method: :delete, data: { confirm: 'Are you sure you want to delete this article?'}, class: 'btn btn-secondary text-white' do %>
        <i class="bi bi-trash"></i>
      <% end %>
    </div>
    <div class="card-footer text-muted">
      <%= time_ago_in_words(article.created_at.localtime) %> ago
    </div>
  </div>
  <br>
<% end %>
