<% @articles.each do |article| %>
  <div class="card text-center">
    <div class="card-header">
      Featured
    </div>
    <div class="card-body">
      <h5 class="card-title">Title</h5>
      <p class="card-text">
        <%= article.article %>
      </p>
      <%= link_to article, class: 'btn btn-secondary text-white' do %>
        <i class="bi bi-link-45deg"></i>
      <% end %>
      <%= link_to edit_article_path(article), class: 'btn btn-secondary text-white' do %>
        <i class="bi bi-pencil"></i>
      <% end %>
      <%= link_to article, method: :delete, data: { confirm: 'Are you sure you want to delete this article?'}, class: 'btn btn-secondary text-white' do %>
        <i class="bi bi-trash"></i>
      <% end %>
    </div>
    <div class="card-footer text-muted">
      <%= time_ago_in_words(article.created_at.localtime) %> ago
    </div>
  </div>
<% end %>
